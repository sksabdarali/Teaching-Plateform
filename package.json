{
  "name": "teaching-platform",
  "version": "1.0.0",
  "description": "AI-powered personalized teaching platform",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev:server": "cd backend && npm run dev",
    "dev:client": "cd frontend && npm start",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "start": "node start-app.js",
    "both": "concurrently \"npm run server\" \"npm run client\""
  },
  "keywords": [
    "education",
    "ai",
    "learning",
    "platform",
    "teaching"
  ],
  "author": "AI Teaching Platform",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.13.2"
  }
}
